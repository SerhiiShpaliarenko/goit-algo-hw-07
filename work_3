class Node:
    def __init__(self, key):
        self.left = None
        self.right = None
        self.val = key

def insert(root, key):
    """
    Допоміжна функція для побудови дерева.
    """
    if root is None:
        return Node(key)
    else:
        if key < root.val:
            root.left = insert(root.left, key)
        else:
            root.right = insert(root.right, key)
    return root

# --- Головна функція для завдання ---
def sum_tree_values(root):
    """
    Знаходить суму всіх значень у двійковому дереві.
    Використовує рекурсивний обхід.
    """
    # Базовий випадок: якщо вузла не існує (дійшли до кінця гілки)
    if root is None:
        return 0
    
    # Рекурсивний крок:
    # Значення поточного вузла + сума лівої частини + сума правої частини
    return root.val + sum_tree_values(root.left) + sum_tree_values(root.right)

# --- Перевірка роботи ---
if __name__ == "__main__":
    # Створюємо дерево
    root = Node(20)
    root = insert(root, 10)
    root = insert(root, 30)
    root = insert(root, 40)
    root = insert(root, 5)

    # Дерево:
    #       20
    #      /  \
    #    10    30
    #   /        \
    #  5         40
    
    # Ручний підрахунок: 20 + 10 + 30 + 5 + 40 = 105

    total_sum = sum_tree_values(root)
    print(f"Сума всіх значень у дереві: {total_sum}")
    # Очікується: 105
